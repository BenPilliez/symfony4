{%block title %}
  Lecture de l'annonce - {{parent()}}
{% endblock %}

{% block body %}
<div class="col">
    <h2>{{advert.title}}</h2>
    <i>Par {{advert.author}}, le {{ advert.date|date('d/m/Y') }}</i>

  <div class="mt-4">
    {{ advert.content }}
  </div>

    <p class="mt-5">
    <a href="{{ path('advert_index') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
