<form method="post" action="{{ path('platform_bundle_delete', {'id': platform_bundle.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ platform_bundle.id) }}">
    <button class="btn">Delete</button>
</form>
